<div class="panel-body">

<table class="table table-hover">
    <thead>
    <tr>    
        <td>職業</td>
        <td>工作內容</td>
        <td>投遞履歷數目</td>
        <td>上限薪資</td>
        <td>最低薪資</td>        
        <td>刊登時間</td>        
    </tr>
    </thead>
    <tbody>
    <% @jobs.each do |job| %>
        <tr>            
    <td>
    <%= render_jobs_status(job) %>
    <%= link_to(job.title, admin_job_path(job)) %></td>
    <td><%=  render_jobs_description(job) %></td>
    <td><%=  job.resumes.count %></td>
    <td><%=  job.wage_upper_bound %></td>
    <td><%=  job.wage_lower_bound %></td>
    <td><%=  job.created_at %></td>
        <td>                
            <%= link_to("Edit", edit_admin_job_path(job), class: "btn btn-sm btn-default")%>
            <%= link_to("Delete", admin_job_path(job),    class: "btn btn-sm btn-default", 
                        method: :delete, data: { confirm: "Are you sure?" } )%>                                                          
    <% if job.is_hidden? %>
    <%= link_to "發布", publish_admin_job_path(job), method: :post, class: "btn btn-xs btn-default"%>
    <% else %>
    <%= link_to "隱藏", hide_admin_job_path(job), method: :post, class: "btn btn-xs btn-default" %>
    <% end %>
        </td>
        </tr>
    <% end %>
    </tbody>
</table>
<div class="text-center">
<%= will_paginate @jobs %>
</div>
